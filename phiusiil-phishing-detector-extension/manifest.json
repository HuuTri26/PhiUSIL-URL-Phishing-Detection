{
  "manifest_version": 3,
  "name": "PhiUSIIL URL Phishing Detector",
  "version": "1.1.0",
  "icons": {
      "128": "icons/icons8-phishing-48.png"
  },
  "description": "Tự động phats hiên URL hiện tại bằng các mô hình PhiUSIIL (Flask API) để phát hiện phishing.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PhiUSIIL Phishing Detector"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
